<h3>Novo objeto</h3>
<div class="card">
  <div class="card-body">
    <form action="/usuarios/objetos/novo" method="POST" >
      {{objeto}}
      {{!-- <input type="hidden" name="idusuario" value="{{user._id}}"> --}}
      <label for="codobjeto">Código do Objeto</label>
        <input type="text" name="codobjeto" placeholder="Digite o código do objeto" class="form-control">
      <label for="nome">Nome do objeto</label>
        <input type="text" name="nome" placeholder="Digite o nome do objeto" class="form-control">
      <label for="categoria">Categoria do objeto</label>
        <input type="text" name="categoria" placeholder="Digite a vategoria do objeto" class="form-control">
      <label for="descricao">Descrição do objeto</label>
        <input type="text" name="descricao" placeholder="Digite a descrição do objeto" class="form-control">
      <label for="preco">Preço do objeto</label>
        <input type="text" name="preco" placeholder="Digite o preço do objeto" class="form-control"><br>
      <button type="submit" class="btn btn-success">Criar objeto</button>
    </form>
  </div>
</div>