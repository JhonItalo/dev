<h2>Lista de objetos</h2>
<hr>
<a href="/usuarios/objetos/add"><button class="btn btn-success">Novo objeto</button></a>

{{#each objeto}}
  <div class="card mt-4">
    <div class="card-cody">
      <h4>{{nome}}</h4>
      <h4>{{descricao}}</h4>
      <h4>{{preco}}</h4>
      <br>
      <small>{{categoria}}</small>
      <br>
      <small>{{codobjeto}}</small>
      <br>
      <small>Data de criação: {{date}}</small><br>
      <a href="/usuarios/objeto/edit/{{_id}}"><button class="btn btn-success mt-4">Editar objeto</button></a>
      <form action="/objeto/deletar" method="POST">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-danger mt-2">Deletar objeto</button>
      </form>
    </div>
  </div>
{{else}}
  <h4 class="mt-3">Nenhum objeto registrado!</h4>
{{/each}}