{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{/each}}
<h3>Crie sua conta:</h3>
<div class="card">
  <div class="card-body">
    <form action="" method="POST">
      <label for="nome">Nome:</label>
        <input type="text" name="nome" class="form-control" placeholder="Digite seu nome." required>
      <label for="email">E-mail:</label>
        <input type="text" name="email" class="form-control" placeholder="Digite seu e-mail." required>
      <label for="senha">Senha:</label>
        <input type="password" name="senha" class="form-control" placeholder="Digite sua senha." required>
      <label for="senha2">Confirme sua senha:</label>
        <input type="password" name="senha2" class="form-control" placeholder="Confirme sua senha." required>
      <button type="submit" class="btn btn-success mt-4">Criar Conta</button>
    </form>
  </div>
</div>